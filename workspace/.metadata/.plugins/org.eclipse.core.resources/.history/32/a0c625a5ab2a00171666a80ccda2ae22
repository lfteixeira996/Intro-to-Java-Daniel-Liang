import java.io.PrintStream;
import java.util.Scanner;

public class Exercise_02_12 {

	public static void main(String[] args) 
	{	
		Scanner input = new Scanner(System.in);
		PrintStream output = new PrintStream(System.out);
		
		output.print("Enter the amount of water in kilograms: ");
		double M = input.nextDouble();		
		
		output.print("Enter the initial temperature: ");
		double initialTemp = input.nextDouble();		
	
		output.print("Enter the final temperature: ");
		double finalTemp = input.nextDouble();		
		
		output.println("The energy needded is " + (M * (finalTemp - initialTemp) * 4184));
		
	}
}
